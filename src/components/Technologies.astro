    class:
      "w-8 h-8 mb-2 hover:brightness-200 transition duration-300 animate-pulse",
    icon: ReactIcon,
    name: "ReactJS",
  },
  TAILWIND: {
    class:
      "w-8 h-8 mb-2 hover:brightness-200 transition duration-300 animate-pulse",
    icon: TailwindIcon,
    name: "Tailwind CSS",
  },
  CSHARP: {
    class:
      "w-8 h-8 mb-2 hover:brightness-200 transition duration-300 animate-pulse",
    icon: CSharpIcon,
    name: "C#",
  },
  JSON: {
    class:
      "w-8 h-8 mb-2 hover:brightness-200 transition duration-300 animate-pulse",
    icon: JsonIcon,
    name: "JSON",
  },
  HTML5: {
    class:
      "w-8 h-8 mb-2 hover:brightness-200 transition duration-300 animate-pulse",
    icon: HTML5Icon,
    name: "HTML5",
  },
  CSS: {
    class:
      "w-8 h-8 mb-2 hover:brightness-200 transition duration-300 animate-pulse",
    icon: CSSIcon,
    name: "CSS3",
  },
  REACTROUTER: {
    class:
      "w-8 h-8 mb-2 hover:brightness-200 transition duration-300 animate-pulse",
    icon: ReactRouterIcon,
    name: "React-Router",
  },
  MySQL: {
    class:
      "w-8 h-8 mb-2 hover:brightness-200 transition duration-300 animate-pulse",
    icon: MySQLIcon,
    name: "MySQL",
  },
  JWT: {
    class:
      "w-8 h-8 mb-2 hover:brightness-200 transition duration-300 animate-pulse",
    icon: JWTIcon,
    name: "JWT",
  },
  SWAGGER: {
    class:
      "w-8 h-8 mb-2 hover:brightness-200 transition duration-300 animate-pulse",
    icon: SwaggerIcon,
    name: "Swagger",
  },
  MONGODB: {
    class:
      "w-8 h-8 mb-2 hover:brightness-200 transition duration-300 animate-pulse -mr-2",
    icon: MongoDBicon,
    name: "MongoDB",
  },
  PHP: {
    class:
      "w-8 h-8 mb-2 hover:brightness-200 transition duration-300 animate-pulse",
    icon: PHPicon,
    name: "PHP",
  },
  JAVASCRIPT: {
    class:
      "w-8 h-8 mb-2 hover:brightness-200 transition duration-300 animate-pulse -mr-3",
    icon: JSIcon,
    name: "JavaScript",
  },
  ANGULAR: {
    class:
      "w-8 h-8 mb-2 hover:brightness-200 transition duration-300 animate-pulse",
    icon: AngularIcon,
    name: "Angular",
  },
  ASTRO: {
    class:
      "w-8 h-8 mb-2 hover:brightness-200 transition duration-300 animate-pulse",
    icon: AstroIcon,
    name: "Astro",
  },
