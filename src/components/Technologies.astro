    class:
      "w-8 h-8 mb-2 hover:brightness-200 transition duration-300 animate-pulse",
    icon: SQLServerIcon,
    name: "SQLServer",
  },
  TYPESCRIPT: {
    class:
      "w-8 h-8 mb-2 hover:brightness-200 transition duration-300 animate-pulse",
    icon: TypeScriptIcon,
    name: "TypeScript",
  },
  VISUALSTUDIO: {
    class:
      "w-8 h-8 mb-2 hover:brightness-200 transition duration-300 animate-pulse",
    icon: VSIcon,
    name: "VisualStudio",
  },
  VISUALSTUDIOCODE: {
    class:
      "w-8 h-8 mb-2 hover:brightness-200 transition duration-300 animate-pulse",
    icon: VSCIcon,
    name: "VisualStudioCode",
  },
  GITHUB: {
    class:
      "w-8 h-8 mb-2 hover:brightness-200 transition duration-300 animate-pulse",
    icon: GitHubIcon,
    name: "GitHub",
  },
};

const SKILLS = [
  {
    title: "FrontEnd",
    tech: [
      TECH.HTML5,
      TECH.CSS,
      TECH.JAVASCRIPT,
      TECH.REACT,
      TECH.REACTROUTER,
      TECH.BOOTSTRAP,
      TECH.TAILWIND,
    ],
  },
  {
    title: "BackEnd",
    tech: [
      TECH.CSHARP,
      TECH.MONGODB,
      TECH.FIREBASE,
      TECH.MySQL,
      TECH.JSON,      
      TECH.SQLSERVER,
      TECH.JWT,
      TECH.NODEJS,
    ],
  },
  {
    title: "Herramientas",
    tech: [
      TECH.GIT,
      TECH.GITHUB,
      TECH.VISUALSTUDIO,
      TECH.VISUALSTUDIOCODE,
      TECH.POSTMAN,
      TECH.SWAGGER,
    ],
  },
  {
    title: "Aprendiendo",
    tech: [TECH.TYPESCRIPT, TECH.AZURE, TECH.PHP, TECH.ANGULAR, TECH.ASTRO],
  },
];
---

<div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
  {
    SKILLS.map(({ title, tech }) => (
      <div class="max-w-sm p-6  border border-gray-300/20 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
        <h5 class="mb-8 text-2xl font-bold tracking-tight text-yellow-200/80 dark:text-white text-center">
          {title}
        </h5>
        <ul class="grid grid-cols-3 gap-4 mb-4">
          {tech.map((tech) => (
            <li class="flex flex-col items-center text-center">
              <span class={`items-center ${tech.class}`}>
                <tech.icon class="w-8 h-8" />
              </span>
              <span class="text-white/70 text-center mt-2 text-xs">
                {tech.name}
              </span>
            </li>
          ))}
        </ul>
      </div>
    ))
  }
</div>
